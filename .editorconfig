# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
# This is causing merge conflicts since we have multiple active branches
trim_trailing_whitespace = false
end_of_line = lf
charset = utf-8


# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

# The JSON files contain newlines inconsistently
[{*.json,*.yml,*.yaml}]
indent_size = 2
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false
